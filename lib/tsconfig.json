{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"lib": ["ES2020", "DOM", "DOM.Iterable"],

		"moduleResolution": "bundler",
		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": true,
		"outDir": "./types",
		"declaration": true,
		"emitDeclarationOnly": true,
		"rootDir": "./src",
		"composite": true,

		"allowImportingTsExtensions": true,
		"verbatimModuleSyntax": true,
		"useDefineForClassFields": true,

		"strict": true,
		"skipLibCheck": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
